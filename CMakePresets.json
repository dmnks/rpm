{
    "version": 10,
    "configurePresets": [
        {
            "name": "dev",
            "displayName": "Development",
            "cacheVariables": {
                "ENABLE_WERROR": "ON",
                "ENABLE_ASAN": "ON",
                "ENABLE_UBSAN": "ON",
                "ENABLE_BDB_RO": "ON",
                "ENABLE_TESTSUITE": "ON",
                "WITH_FSVERITY": "ON",
                "WITH_IMAEVM": "ON",
                "WITH_DOXYGEN": "ON"
            },
            "environment": {
                "CFLAGS": "-Og -g",
                "CXXFLAGS": "-Og -g"
            }
        },
        {
            "name": "dev-gcc",
            "inherits": "dev",
            "displayName": "GNU C based development",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "gcc",
                "CMAKE_CXX_COMPILER": "g++"
            }
        },
        {
            "name": "dev-clang",
            "inherits": "dev",
            "displayName": "Clang based development",
            "cacheVariables": {
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "ENABLE_WERROR": "OFF",
                "ENABLE_ASAN": "OFF",
                "ENABLE_UBSAN": "OFF"
            }
        }
    ]
}

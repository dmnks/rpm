#!/bin/bash

LOWERDIR="$PWD/@UTIL_DIR@:$PWD/@INST_DIR@:$PWD/@TREE_DIR@"

function sandbox()
{
    local cmd=$1
    shift
    case $cmd in
        init)
            local dir=${1-.}
            [ -d $dir/merged ] && return
            mkdir -p $dir/{upper,work,merged}
            mount -t overlay overlay -o userxattr \
                  -o lowerdir=$LOWERDIR,upperdir=$dir/upper,workdir=$dir/work \
                  $dir/merged
        ;;
        stop)
            local dir=${1-.}
            umount -ql $dir/merged
            rmdir $dir/merged
        ;;
        rm)
            local dir=${1-.}
            sandbox stop $dir
            rm -rf $dir/{upper,work}
            rmdir $dir
        ;;
        exec)
            @BWRAP@ --unshare-pid --dev-bind $1/merged / \
                    --dev /dev --proc /proc --chdir / \
                    --setenv PATH @CMAKE_INSTALL_PREFIX@/bin:/usr/bin "${@:2}"
        ;;
        run)
            local ro=0
            if [ "$1" == "--read-only" ]; then
                ro=1
                shift
            fi
            sandbox init $1
            [ $ro == 1 ] && mount -o remount,ro $1/merged
            sandbox exec $1 --bind $PWD /srv --chdir /srv "${@:2}"
        ;;
        prune)
            for dir in "$@"; do
                [ -d ${dir} ] && (cd ${dir} && [ -d merged ] && sandbox rm)
            done
        ;;
    esac
}

if [ "$(basename $0)" == "sandbox" ]; then
    @UNSHARE_CMD@ sh -c 'source ./sandbox; sandbox "$@"' "sh" "$@"
fi

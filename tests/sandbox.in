#!/bin/bash

PROGRAM=$(basename $0)
LOWERDIR=$PWD/@UTIL_DIR@:$PWD/@INST_DIR@:$PWD/@TREE_DIR@
SANDBOX=$PWD/@CONTAINER_DIR@
RPMTEST=$SANDBOX/merged

function sandbox()
{
    case $1 in
        mount)
            mkdir -p $SANDBOX/{upper,work} $RPMTEST
            mount -t overlay overlay \
                  -o userxattr \
                  -o lowerdir=$LOWERDIR \
                  -o upperdir=$SANDBOX/upper \
                  -o workdir=$SANDBOX/work \
                  $MOUNTARGS $RPMTEST
        ;;
        umount)
            umount -l $RPMTEST
        ;;
        prune) shift
            for dir in "$@"; do
                [ -d $dir ] && umount -ql $dir
            done
        ;;
        exec) shift
            @BWRAP@ --unshare-pid --dev-bind $RPMTEST / \
                    --dev /dev --proc /proc --chdir / \
                    --setenv PATH @CMAKE_INSTALL_PREFIX@/bin:/usr/bin "$@"
        ;;
        shell) shift
            local cmd=$1
            if [ $# == 0 ]; then
                cmd=$(grep ^root: $RPMTEST/etc/passwd | cut -d: -f7)
            else
                shift
            fi
            sandbox exec --unshare-uts --hostname $(basename $SANDBOX) \
                         --unsetenv PS1 --setenv HOME /root \
                         --bind $PWD /srv --chdir /srv $cmd "$@"
        ;;
    esac
}

function cmd()
{
    sandbox mount
    case $1 in
        "")
            export LOWERDIR SANDBOX RPMTEST
            export -f sandbox
            $SHELL
        ;;
        shell) shift
            sandbox shell "$@"
        ;;
    esac
    sandbox umount
}

case $PROGRAM in
    rpmtests)
        unset MOUNTARGS cmd
    ;;
    sandbox)
        @UNSHARE_CMD@ sh -c 'source '$0'; cmd "$@"' - "$@"
        exit 0
    ;;
esac

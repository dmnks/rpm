#!/bin/bash
#
# Podman-based mktree backend using an OCI image to build and run RPM.
# Works standalone (outside of a build directory) too.

PROGRAM=$(basename $0)
if [ "$PROGRAM" == "mktree" ]; then
    # Running from build directory
    PODMAN=@PODMAN@
    CONTEXT=@CMAKE_SOURCE_DIR@
else
    # Running from source directory
    PODMAN=$(echo $PROGRAM | cut -d'.' -f2)
    CONTEXT=..
fi

IMAGE=rpm
BUILD_ARGS="-f Dockerfile $CONTEXT"
ROOTLESS=$([ $(id -u) == 0 ] && echo 0 || echo 1)

rpmtests()
{
    local opt
    if [ "$1" == "--unattended" ]; then
        opt=
        shift
        set -- --log "$@"
    else
        opt="-i"
    fi
    $PODMAN run --privileged -t --rm --read-only $opt --tmpfs /tmp -v /srv \
                --workdir /srv -e ROOTLESS=$ROOTLESS $IMAGE rpmtests "$@"
}

CMD=$1; shift
case $CMD in
    build)
        # Build base image
        $PODMAN build --target base -t $IMAGE/base $BUILD_ARGS

        # Add RPM install on top
        [ -n "$($PODMAN images -q $IMAGE)" ] && $PODMAN rmi $IMAGE
        $PODMAN build --target full -t $IMAGE $BUILD_ARGS
    ;;
    check)
        rpmtests "$@"
    ;;
    atshell)
        rpmtests --shell
    ;;
    shell)
        rpmtests --shell snapshot shell
    ;;
    reset)
        rpmtests --reset
    ;;
esac

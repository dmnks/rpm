#!/bin/bash
# Podman-native mktree backend

PODMAN=$(basename $0 | cut -d'.' -f2)
DOCKERFILE=Dockerfile.fedora
IMAGE=rpm
SANDBOX=${IMAGE}-sandbox
ROOTLESS=$([ "$(id -u)" == 0 ] && echo 0 || echo 1)
CMD=$1; shift

case $CMD in
    build)
        cd $(dirname $0)
        $PODMAN build -t $IMAGE -f $DOCKERFILE ..
    ;;
    shell)
        if [ -n "$($PODMAN ps -a -q -f name=$SANDBOX)" ]; then
            echo "Attaching to existing sandbox."
            $PODMAN start $SANDBOX >/dev/null
            $PODMAN attach $SANDBOX
            exit
        fi
        $PODMAN run --privileged -it --name $SANDBOX --hostname sandbox \
                    -v $PWD:/srv:z --workdir /srv $IMAGE "$@"
    ;;
    check)
        $PODMAN run --privileged -it --rm --read-only -e ROOTLESS=$ROOTLESS \
                    -v /rpm/check $IMAGE ./mktree check "$@"
    ;;
    reset)
        $PODMAN stop $SANDBOX >/dev/null &&
        $PODMAN rm $SANDBOX >/dev/null
    ;;
    clean)
        $PODMAN rmi $IMAGE >/dev/null
    ;;
    *)
        echo "Command \"$CMD\" is not supported by this backend." >&2
    ;;
esac

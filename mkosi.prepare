#!/bin/sh

[ "$1" != "final" ] && exit

rpm --nodeps -e \
    rpm \
    rpm-libs \
    python3-rpm \
    rpm-build-libs \
    rpm-sign-libs \
    dnf \
    dnf-data \
    libdnf \
    libsolv \
    libmodulemd \
    python3-dnf \
    python3-hawkey \
    python3-libdnf

btrfs subvolume snapshot / /root/base
